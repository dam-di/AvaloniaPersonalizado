<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaPersonalizado.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaPersonalizado.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        xmlns:fa="using:FluentAvalonia.UI.Controls"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaPersonalizado">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <fa:NavigationView PaneDisplayMode="Left" SelectedItem="{Binding SelectedItem}">
        <fa:NavigationView.MenuItems>
            <!-- <fa:NavigationViewItem Content="Inicio" IconSource="{fi:FluentIcon Settings16Regular}" /> -->
            <fa:NavigationViewItem Content="Configuración" IconSource="Settings"/>
            <fa:NavigationViewItem Content="Inicio" IconSource="Home"/>
        </fa:NavigationView.MenuItems>
        <!-- Aquí mostramos la vista seleccionada -->
        <ContentControl Content="{Binding CurrentView}" />
    </fa:NavigationView>

</Window>
